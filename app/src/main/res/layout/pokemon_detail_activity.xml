        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pokemon_details_textview"
            android:layout_width="100dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/pokemon_details_textview1"
            android:layout_width="100dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pokemon_details_textview2"
            android:layout_width="100dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/pokemon_details_textview3"
            android:layout_width="100dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pokemon_details_textview4"
            android:layout_width="100dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/pokemon_details_textview5"
            android:layout_width="100dp"
