            android:layout_height="20dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pokemon_details_textview10"
            android:layout_width="100dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/pokemon_details_textview11"
            android:layout_width="100dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="type"/>

        <TextView
            android:id="@+id/pokemon_details_textview12"
            android:layout_width="100dp"
            android:layout_height="20dp" />

    </LinearLayout>

</LinearLayout>
